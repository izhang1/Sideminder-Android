<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/circleindicator"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_circle"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:text="1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/infoTitle"
        android:layout_alignTop="@+id/circleindicator"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/circleindicator"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details for Sideminder"
        android:id="@+id/infoDetails"
        android:layout_alignStart="@+id/infoTitle"
        android:layout_below="@+id/infoTitle"
        android:layout_marginTop="1dp"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/circleindicator" />
</RelativeLayout>