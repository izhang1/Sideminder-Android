<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder Intervals (In Days)"
        android:id="@+id/textView"
        android:layout_margin="16dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/projTime"
        android:layout_marginLeft="5dp"
        android:hint="8:00PM"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="10"
        android:id="@+id/projInterval"
        android:gravity="center"
        android:hint="2"
        android:layout_alignTop="@+id/projTime"
        android:layout_alignStart="@+id/textView"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Day(s) at"
        android:id="@+id/textView3"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/projTime"
        android:layout_toStartOf="@+id/projTime"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp" />

</RelativeLayout>